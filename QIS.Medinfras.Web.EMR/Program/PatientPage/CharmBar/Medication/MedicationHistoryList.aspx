                                                </ItemTemplate>
                                            </asp:TemplateField>
                                            <asp:TemplateField HeaderStyle-HorizontalAlign="Left" HeaderStyle-Width="350px">
                                                <HeaderTemplate>
                                                    <div><%=GetLabel("Compound Contents")%></div>
                                                </HeaderTemplate>
                                                <ItemTemplate>
